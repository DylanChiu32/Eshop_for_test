<!doctype html>
<html lang="zh-CN">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
<meta name="Keywords" content="{$keywords}" />
<meta name="Description" content="{$description}" />
<title>{$page_title}</title>
<link rel="shortcut icon" href="favicon.ico" />
<link href="{$hhs_css_path}/style.css" rel="stylesheet" />
{insert_scripts files='jquery.js,haohaios.js,jquery.lazyload.js'}
</head>
<body>
<div class="container">
    <div class="top_search">
        <form id="searchForm" name="searchForm" method="get" action="search.php" onSubmit="return checkSearchForm()">
            <input name="keywords" id="keyword" type="text" class="text" value="{$search_keywords|escape}" placeholder="商品搜索">
            <input type="submit" value="搜索" class="submit submit_new" />
            <input type="hidden" name="search_type" value="is_zero">
        </form>
    </div>
    <div class="top_nav">
        <ul class="sort">
            <li><a href="zero.php?sort=sort_order&uid={$uid}" {if $sort eq 'sort_order'}class="cur"{/if}>综合</a></li>
            <li><a href="zero.php?sort=click_count&cid={$cat_id}&uid={$uid}" {if $sort eq 'click_count'}class="cur"{/if}>人气</a></li>
            <li><a href="zero.php?sort=sales_num&cid={$cat_id}&uid={$uid}" {if $sort eq 'sales_num'}class="cur"{/if}>销量</a></li>
            <li><a href="zero.php?sort=shop_price&cid={$cat_id}&uid={$uid}" {if $sort eq 'shop_price'}class="cur"{/if}>价格</a></li>
        </ul>
        <ul class="menu">
            <li><a href="zero.php?sort=sort_order&uid={$uid}" {if $cat_id eq 0}class="cur"{/if}>全部</a></li>
            {foreach from=$categories item=cat}
            <li><a href="zero.php?cid={$cat.id}&sort={$sort}&uid={$uid}" {if $cat_id eq $cat.id}class="cur"{/if}>{$cat.name}</a></li>
            {/foreach}
        </ul>
    </div>
    <div class="blank"></div>
    <div class="good_list">
        <div class="blank"></div>
        <ul class="list_B">
            <!--{foreach from=$goods_list item=goods}-->
            <li class="list_B_li_new">
                <a href="{if $goods.goods_number gt 0}{$goods.url}&uid={$uid}{else}javascript:void(0);{/if}"><img data-original="{$goods.goods_thumb}" src="images/loading.gif" class="lazy"></a>
                <p class="tit"><a href="{$goods.url}&uid={$uid}">{$goods.goods_name}</a></p>
                <p class="brief">{$goods.goods_brief}</p>
                <p class="list_B_p"><del class="del_new del_new2">¥{$goods.market_price}</del><font class="price price_new2 price_new_2">¥<b>{$goods.shop_price}</b></font></p>
                <img class="tuan_g_bottom" src="themes/haohai/images/shade.png" />
            </li>
            <!--{/foreach}-->
        </ul>
    </div>
    <!-- #BeginLibraryItem "/library/pages.lbi" --><!-- #EndLibraryItem -->
</div>
<div class="blank"></div>
<div class="footer">

    <ul>

        <li><a href="index.php"><i class="ico_index"></i>首页</a></li>
        
        <li><a href="tuan.php" class="active"><i class="ico_tuan"></i>拼团</a></li>

		<li><a href="mall.php"><i class="ico_mall"></i>商城</a></li>

        <li><a href="square.php"><i class="ico_square"></i>广场</a></li>

        <li><a href="user.php"><i class="ico_user"></i>个人中心</a></li>

    </ul>

</div>
<script>
	window.onload=function(){
		$("img.lazy").lazyload({
                effect: "fadeIn",
                threshold : 200
        });
        $("img.lazy:eq(0)").attr('src',$("img.lazy:eq(0)").attr('data-original'));
	}
</script>
<script type="text/javascript">
    //页面载入 搜索按钮动画
    $(document).ready(function(){
        $(".submit_new").animate({
                marginRight:"46px"
            }, 1000);
    });
</script>
</body>
</html>

